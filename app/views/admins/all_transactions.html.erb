<div class="container">
  <table class="table table-striped table-dark table-hover caption-top">
    <caption style="color:orange; font-size:12pt; font-weight:bold; text-align:center">User Transactions</caption>
    <thead class="table-dark">
      <tr class="text-center">
        <th>User ID</th>
        <th>Stocks</th>
        <th>Shares</th>
        <th>Action</th>
        <th>Amount</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr class="text-center align-middle">
          <td class="text-left"><%= transaction.user.user_id %></td>
          <td><%= transaction[:stock] %></td>
          <td><%= transaction[:shares] %></td>
          <td style="text-transform:capitalize"><%= transaction[:action] %></td>
          <td>$<%= transaction[:amount] %></td>
          <td><%= transaction.created_at.strftime("%b %d, %Y %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>