  <div class="container">
    <table class="table table-striped table-dark table-hover caption-top">
      <caption style="color:orange; font-size:12pt; font-weight:bold; text-align:center">NebulaTraders</caption>
        <thead class="table-dark">
          <tr class="text-center">
            <th>Name</th>
            <th>Email</th>
            <th>User ID</th>
            <th>Balance</th>
            <th>Status</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>

            <th>
 
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
            <tr class="text-center align-middle">
              <td class="text-left"><%= user.first_name %> <%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.user_id %></td>
              <td>$ <%= user.cash %></td>
              <td style="text-transform:capitalize"><%= user.status %></td>
              <td><%= user.created_at.strftime("%b %d, %Y %H:%M:%S") %></td>
              <td><%= user.updated_at.strftime("%b %d, %Y %H:%M:%S") %></td>
              <td>
                <%= link_to 'Show Details', show_user_admins_path(user), class: "actions_link"%>
                |
                <%= link_to 'Edit Info', edit_user_admins_path(user), class: "actions_link" %>
                </td>       
            </tr>
          <% end %>
        </tbody>
      </table>

  <%= link_to 'Back', admins_path, :class=> "back_link" %>
</div>